{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}
{% block body %}
    <div class="container mt-4">
        <h1>Liste des catégories</h1>
        <hr class="dotted"/>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        <hr/>
        <div class="container-fluid shadow-lg rounded-lg border border-info" style="background-color: lightblue;">
            <div class="container  p-3">
                <table class="table table-striped table-hover table-bordered table-light shadow-lg rounded col-lg-7"  style="margin-left: 20%;">
                    <thead class="table-primary">
                    <tr>
                        <th></th>
                        <th>Nom</th>
                    </tr>
                    </thead>
                    <tbody>
                        {% for category in categories %}
                            <tr>
                                <td>{{ category.id }}</td>
                                <td>{{ category.name }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}


