{% extends 'base.html.twig' %}

{% block title %}Authentification{% endblock %}

{% block body %}
    <body>
    <!-- Main Content -->
    <div class="container-fluid">
        <div class="row main-content bg-success text-center">
            <div class="col-md-4 text-center company__info">
                <h4 class="company_title" style="font-family: 'Pacifico', cursive;color: white;font-size: 50px;">Leboangle</h4>
                <small class="mt-3">Espace d'administration</small>
            </div>
            <div class="col-md-8 col-xs-12 col-sm-12 login_form ">
                <div class="container-fluid">
                    <div class="row">
                        <h2 style="padding:10px;">Connexion </h2>
                    </div>
                    <div class="row">
                        <form method="post" control="" class="form-group">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                            <div class="row">
                                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control form__input" required autofocus>
                            </div>
                            <div class="row">
                                <input type="password" name="password" id="inputPassword" class="form-control form__input" required>
                            </div>

                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}"
                            >
                            <div class="row">
                                <input class="btn outline btn-primary" id="btn" value="Se connecter" type="submit">
                            </div>
                            {#
                            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                            See https://symfony.com/doc/current/security/remember_me.html

                            <div class="checkbox mb-3">
                                <label>
                                    <input type="checkbox" name="_remember_me"> Remember me
                                </label>
                            </div>
                            #}
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </body>

{% endblock %}